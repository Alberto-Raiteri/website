<% wrap_layout :layout do %>
  <div class="container-fluid mt-5">
    <div class="row">
      <div class="col-lg-9 order-lg-2">
        <div class="row h-100">
          <div class="col-lg-4 order-lg-2">
            <h2><%= current_page.data.title %></h2>
            <p><%= current_page.data.year %><br><%= current_page.data.dimensions %><br><%= current_page.data.description %></p>
          </div>
          <div class="col-lg-8 order-lg-1">
            <main class="h-100" id="artwork" style="background: url('<%= t(:static) %>/_img/works/<%= current_page.data.slug %>.jpg') center top no-repeat; background-size: contain">
              <a target="_blank" href="/<%= t(:domain) %>/fullscreen/<%= current_page.data.slug %>">
                <p class="fullscreen h-75">
                  <img src="<%= t(:static) %>/_img/icons/arrows-fullscreen.svg" alt="" width="32" height="32" title="<%= t(:fullscreen) %>">
                </p>
              </a>
            </main>
          </div>
        </div>
      </div>
      <div class="col-lg-3 order-lg-1">
        <aside>
          <%= partial(:'partials/sidebar') %>
        </aside>
      </div>
    </div>
  </div>
<% end %>
